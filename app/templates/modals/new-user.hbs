<div class="fullscreen">
  <div class="modal">
    <div class="x" {{action 'closeModal'}}></div>
    <div class="modal-header">
      <h1>Signup</h1>
      <p>Creating an account lets you upload scores and participate in the community. And it's free!</p>
    </div>
    <div class="modal-body">
      {{input value=email action='register' id="new-account-email" name="email" placeholder="Email"}}
      {{input type="password" value=password action='register' id="new-account-password" placeholder="Password"}}
      {{#if errorMessages.email}}
        <div class="errorMessage">Email {{errorMessages.email}}</div>
      {{/if}}
    </div>
    <div class="modal-footer">
      <button {{action 'register'}} id="create-account-button">Continue</button>
    </div>
  </div>
</div>
