
<div class="app">

  {{outlet 'modal'}}


  <nav class="primary">
    <div class="nav-element">
      {{#link-to 'application' classNames="logo"}}
        Noteriver
      {{/link-to}}
    </div>

    <div class="remainder"></div>

    {{#if session.isAuthenticated}}
      <div class="nav-element">
        <button {{action 'toggleSessionMenuIsOpen'}} class="current-session-button">
          <img src="{{user.avatarUrl}}" class="avatar"/>
          <div class="arrow-down">
            <div class="menu {{if sessionMenuIsOpen 'faded-in' 'faded-out'}}">
              <ul>
                <li><button>Profile</button></li>
                <li><button>Account</button></li>
                <li><button class='logout' {{action 'logout'}} class="logout">Log out</button></li>
              </ul>
            </div>
          </div>
        </button>
      </div>
    {{else}}
      <div class="nav-element">
        <button {{action 'openModal' 'new-session'}} id="new-session-button" class="nav-button">
          Log in
        </button>
      </div>
      <div class="nav-element">
        <button {{action 'openModal' 'new-user'}} id="new-user-button" class="nav-button">
          Register
        </button>
      </div>
    {{/if}}
  </nav>

  <div class="main">
    {{outlet}}
  </div>

</div>
