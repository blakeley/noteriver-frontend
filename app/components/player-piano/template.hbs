<defs>
  <linearGradient id="gradient-ebony-key-side" x1="0%" y1="0%" x2="0%" y2="100%">
    <stop offset="0%" style="stop-color:#303030;stop-opacity:1" />
    <stop offset="100%" style="stop-color:#606060;stop-opacity:1" />
  </linearGradient>

  <linearGradient id="gradient-ebony-key-top" x1="0%" y1="0%" x2="0%" y2="100%">
    <stop offset="0%" style="stop-color:#808080;stop-opacity:1" />
    <stop offset="3%" style="stop-color:#383838;stop-opacity:1" />
    <stop offset="20%" style="stop-color:#202020;stop-opacity:1" />
    <stop offset="100%" style="stop-color:#141414;stop-opacity:1" />
  </linearGradient>

  <linearGradient id="gradient-ebony-key-front" x1="0%" y1="0%" x2="0%" y2="100%">
    <stop offset="0%" style="stop-color:#484848;stop-opacity:1" />
    <stop offset="100%" style="stop-color:#303030;stop-opacity:1" />
  </linearGradient>

</defs>


{{#svg-g translateY=noteTranslateY}}
  {{#each midi.notes as |note|}}
    {{piano-roll-note note=note timeScale=timeScale}}
  {{/each}}
{{/svg-g}}

{{#each keyboard.IVORY_MIDI_NUMBERS as |midiNumber|}}
  {{piano-key midiNumber=midiNumber}}
{{/each}}

{{#each keyboard.EBONY_MIDI_NUMBERS as |midiNumber|}}
  {{ebony-key midiNumber=midiNumber}}
{{/each}}

