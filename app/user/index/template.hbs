{{#if model.scores}}
  <ul class='scores'>
    {{#each model.scores as |score|}}
      <li class='score'>
        {{#link-to 'score' score.id}}
          <span class="title">
            {{score.title}}
          </span>
          <span class="artist">
            {{score.artist}}
          </span>
        {{/link-to}}
      </li>
    {{/each}}
  </ul>
{{else}}
  {{model.username}} doesn't have any scores yet
{{/if}}
